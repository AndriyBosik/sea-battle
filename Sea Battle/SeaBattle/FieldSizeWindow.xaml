<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="SeaBattle.FieldSizeWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SeaBattle"
	Height="200"
	Width="300">
	<Grid
		Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="20" />
			<RowDefinition
				Height="20" />
			<RowDefinition
				Height="20" />
			<RowDefinition
				Height="20" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0">Type count of rows: </TextBlock>
		<TextBox
			x:Name="tbRows"
			Grid.Row="1"
			MinWidth="200"
			TabIndex="1">10</TextBox>
		<TextBlock
			Grid.Row="2">Type count of columns: </TextBlock>
		<TextBox
			x:Name="tbColumns"
			Grid.Row="3"
			MinWidth="200"
			TabIndex="2">10</TextBox>
		<WrapPanel
			Grid.Row="4"
			HorizontalAlignment="Right"
			Margin="0,15,0,0">
			<Button
				IsDefault="True"
				Click="Accept"
				MinWidth="80"
				Margin="0,10,5,0"
				TabIndex="3">OK</Button>
			<Button
				IsCancel="True"
				MinWidth="80"
				Margin="0,10,0,0"
				TabIndex="4">Cancel</Button>
		</WrapPanel>
	</Grid>
</Window>