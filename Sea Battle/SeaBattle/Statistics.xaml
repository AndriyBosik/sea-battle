<Window x:Class="SeaBattle.Statistics"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SeaBattle"
   	Height="300"
    Width="300"
	ResizeMode="NoResize"
	SizeToContent="WidthAndHeight"
	Padding="15">
	<StackPanel
		Orientation="Vertical"
		Margin="15">
		<TextBlock
			x:Name="tblUserInformation"
			FontSize="13"
			Margin="0,0,0,10" />
		<ListView
			HorizontalContentAlignment="Stretch"
			VerticalContentAlignment="Stretch"
			x:Name="lbGames"
			Margin="0,0,0,10"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			FontSize="13">
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<Setter Property="Focusable" Value="False" />
				</Style>
			</ListView.ItemContainerStyle>
			<ListView.View>
				<GridView>
					<GridViewColumn Header="User" Width="100" DisplayMemberBinding="{Binding User}" />
					<GridViewColumn Header="Opponent" Width="100" DisplayMemberBinding="{Binding Opponent}" />
					<GridViewColumn Header="Result" Width="100" DisplayMemberBinding="{Binding Result}" />
				</GridView>
			</ListView.View>
		</ListView>
		<StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Right"
			VerticalAlignment="Center">
			<Button
				x:Name="bOK"
				Content="OK"
				Padding="10,0,10,0"
				Click="OK"/>
		</StackPanel>
	</StackPanel>
</Window>