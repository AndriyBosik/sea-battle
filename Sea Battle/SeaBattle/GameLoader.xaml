<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="SeaBattle.GameLoader" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Load Game"
	Width="300"
	Height="336"
	ResizeMode="NoResize">
	<DockPanel>
		<ListBox
			Height="212"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			DockPanel.Dock="Top"
			Margin="25,10,0,35"
			Width="240" />
		<StackPanel
			HorizontalAlignment="Right"
			VerticalAlignment="Center"
			Orientation="Horizontal"
			DockPanel.Dock="Bottom">
			<Button
				x:Name="bCancel"
				Content="Cancel"
				Click="CancelLoading"
				Padding="10,0,10,0"
				FontSize="13"
				Margin="10" />
			<Button
				x:Name="bLoad"
				Content="Load"
				Click="LoadGame"
				Padding="10,0,10,0"
				FontSize="13"
				Margin="10" />
		</StackPanel>
	</DockPanel>
</Window>