<Window x:Class="SeaBattle.FieldEditor"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Field Editor" Height="300" Width="300">
	<Border
		Padding="10">
	
		<StackPanel
			Orientation="Vertical">
		
			<TextBlock x:Name="tbInformation"
				FontSize="20"
				TextWrapping="Wrap"></TextBlock>
			
			<StackPanel
				x:Name="spComponents"
				Orientation="Vertical">
			
				<StackPanel
					x:Name="spFieldAndRightBanner"
					Orientation="Horizontal"
					Margin="10">
				
					<StackPanel
						x:Name="spField"
						Orientation="Vertical"></StackPanel>
				
					<StackPanel
						x:Name="spRightBanner"
						Orientation="Vertical"
						Margin="10,0,0,0">
					
						<StackPanel
							x:Name="spOrientationGroup"
							Orientation="Horizontal"></StackPanel>
					
						<Button
							Content="Go back"
							x:Name="bGoBack"></Button>
					
						<Button
							Content="Shop"
							x:Name="bShop"></Button>
					
						<Button
							Content="Next"
							x:Name="bNext"></Button>
					
						<StackPanel
							x:Name="spBombsRadios"
							Orientation="Horizontal"></StackPanel>
					
					</StackPanel>
				
				</StackPanel>
			
				<StackPanel
					x:Name="spSizeRadios"
					Orientation="Horizontal"></StackPanel>
			
			</StackPanel>
	
		</StackPanel>

	</Border>
</Window>