<Window x:Class="SeaBattle.Window1"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SeaBattle" Height="400" Width="400">
	<DockPanel>
		<StackPanel Orientation="Vertical">
			<Grid DockPanel.Dock="Left">
				<Grid.RowDefinitions>
					<RowDefinition Height="100"></RowDefinition>
					<RowDefinition Height="100"></RowDefinition>
					<RowDefinition Height="100"></RowDefinition>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="100"></ColumnDefinition>
					<ColumnDefinition Width="100"></ColumnDefinition>
					<ColumnDefinition Width="100"></ColumnDefinition>
				</Grid.ColumnDefinitions>
				<Button Grid.Column="0" Grid.Row="0">Press me!</Button>
				<Button Grid.Column="0" Grid.Row="1">Press me!</Button>
				<Button Grid.Column="0" Grid.Row="2">Press me!</Button>
				<Button Grid.Column="1" Grid.Row="0">Press me!</Button>
				<Button Grid.Column="1" Grid.Row="1">Press me!</Button>
				<Button Grid.Column="1" Grid.Row="2">Press me!</Button>
				<Button Grid.Column="2" Grid.Row="0">Press me!</Button>
				<Button Grid.Column="2" Grid.Row="1">Press me!</Button>
				<Button Grid.Column="2" Grid.Row="2">Press me!</Button>
			</Grid>
			<RadioButton>Don\'t press me</RadioButton>
		</StackPanel>
		<RadioButton DockPanel.Dock="Right">But you can press me</RadioButton>
	</DockPanel>
</Window>