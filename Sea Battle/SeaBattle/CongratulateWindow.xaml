<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="SeaBattle.CongratulateWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Congratulations"
	ResizeMode="NoResize"
	
	SizeToContent="WidthAndHeight">
	
	<StackPanel
		Orientation="Vertical"
		Margin="20">
	
		<Label
			x:Name="lCongratulationText"
			VerticalAlignment="Center"
			HorizontalAlignment="Center"
			Margin="0,20,0,20"
			FontSize="20"></Label>
		
		<Label
			VerticalAlignment="Center"
			HorizontalAlignment="Center"
			Margin="0,20,0,20"
			FontSize="13">(Close this window to close the application)</Label>
	
		<StackPanel
			Orientation="Horizontal"
			HorizontalAlignment="Right"
			VerticalAlignment="Center">
		
			<Button
				x:Name="bMainMenu"
				Margin="10,0,10,0">Main Menu</Button>
		
		</StackPanel>

	</StackPanel>

</Window>