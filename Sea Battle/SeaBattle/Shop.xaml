<Window x:Class="SeaBattle.Shop"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="SeaBattle" Height="300" Width="300">
	<StackPanel
		x:Name="spContent"
		Orientation="Vertical">
		
		<Label
			x:Name="lPlayerInformation"
			FontSize="22"
			FontFamily="Comic Sans MS"
			HorizontalAlignment="Center"></Label>
		
		<Grid
			x:Name="gItems">
		
		</Grid>
		<StackPanel
			x:Name="spBottomButtons"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			
			<Button
				x:Name="bBuyBullets"
				IsEnabled="False"
				Click="bBuyBulletsClick"
				Margin="10"
				Padding="20,0,20,0">
				Buy Bullets
			</Button>
			
			<Button
				x:Name="bOK"
				HorizontalAlignment="Right"
				Click="bOKClick"
				Margin="10,10,10,10"
				Padding="20,0,20,0">
				OK
			</Button>
		
		</StackPanel>
	
	</StackPanel>
</Window>